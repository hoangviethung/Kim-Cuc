                    </ul>
                </div>
                <!-- FORM TÌM KIẾM-->
                <div class="search">
                    <form action="#">
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="...">
                        </div>
                        <div class="submit">
                            <button><img class="lazyload blur-up" data-src="/Content/resources/assets/icons/search-header.svg" alt="search"></button>
                        </div>
                    </form>
                </div>
