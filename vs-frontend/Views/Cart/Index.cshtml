@model MainProject.SCommerce.LandingPage.Models.Cart.CartViewModel

<section class="cart-list-page">
    <div class="container">
        <div class="row">
            <div class="col-xl-8">
                <div class="cart-table-title">
                    <div class="info-title">
                        <p id="quantity-product">@Html.GetResource(TempResourceKeyCollection.Cart) (sản phẩm)</p>
                    </div>
                    <div class="quantity-title">
                        <p>@Html.GetResource(TempResourceKeyCollection.Cart_Amount)</p>
                    </div>
                    <div class="price-title">
                        <p>@Html.GetResource(TempResourceKeyCollection.Price)</p>
                    </div>
                </div>
                <div class="cart-table">
                    <div class="cart-item">
                        <div class="item-info">
                            <div class="imgbox"><img src="/Content/resources/assets/images/products/list-product/1.png" alt=""></div><a class="name" href="/product/index">
                                <h3>Tên sản phẩm</h3>
                            </a>
                            <input class="remove-cart" type="button" value="@Html.GetResource(ResourceKeyCollection.Delete)" data-pid="11223344" data-propertyid="11223344" data-url="/xoa-khoi-gio-hang">
                        </div>
                        <div class="item-quantity">
                            <div class="mobile item-label">@Html.GetResource(ResourceKeyCollection.Cart_Amount)</div>
                            <div class="quantity-input">
                                <div class="downQuantity" data-pid="11223344" data-propertyid="11223344" data-url-update="/cap-nhat-gio-hang">-</div>
                                <input class="quantity-cart" name="quantity" type="text" value="499" data-pid="11223344" data-propertyid="11223344">
                                <div class="upQuantity" data-pid="11223344" data-propertyid="11223344" data-url-update="/cap-nhat-gio-hang">+</div>
                            </div>
                        </div>
                        <div class="item-price">
                            <div class="mobile item-label">@Html.GetResource(ResourceKeyCollection.Price)</div>
                            <div class="item-price-wrapper">
                                <p class="price"><b>9.490.000đ</b></p>
                                <p class="price-old">
                                    <del>12.390.000đ</del>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cart-back"><a href="danh-sach-san-pham.html">@Html.GetResource(ResourceKeyCollection.Keep_Shopping)</a></div>
            </div>
            <div class="col-xl-4">
                <div class="cart-summary">
                    <div class="cart-summary-block">
                        <p><span>@Html.GetResource(ResourceKeyCollection.Temp_Price):</span><span id="temp_price">515.000.000đ</span></p>
                        <p><span>@Html.GetResource(ResourceKeyCollection.Discount_Amount):</span><span id="discount_amount">-15.000.000đ</span></p>
                    </div>
                    <div class="cart-summary-block">
                        <p><span>@Html.GetResource(ResourceKeyCollection.Actual_Amount_Total):</span><strong class="price" id="actual_amount_total">515.000.000đ</strong></p>
                        <p class="vat">(Đã bao gồm VAT)</p>
                    </div>
                </div>
                <div class="cart-checkout">
                    <div class="btn btn-submit w-100" data-fancybox="popup-checkout" data-src="#popup-checkout">@Html.GetResource(ResourceKeyCollection.Order)</div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="d-n">
    <div class="popup-checkout" id="popup-checkout">
        <h2>@Html.GetResource(ResourceKeyCollection.Contact_Us)</h2>
        @Html.Partial("_Order", new MainProject.SCommerce.LandingPage.Models.Cart.OrderViewModel())
    </div>
</div>
<div class="d-n">
    <div class="popup-checkout-complete" id="popup-checkout-complete">
        <img src="./assets/icons/cam-on.svg" alt="">
        <h1>@Html.GetResource(ResourceKeyCollection.Cart_Order_Success)</h1>
        <p>@Html.GetResource(ResourceKeyCollection.Thank_You)</p>
        <p>Quản trị viên sẽ liên hệ để lại để xác nhận.</p><br><br>
        <p>Bạn có thể xem lại đơn hàng tại <a href="#">@Html.GetResource(ResourceKeyCollection.Here)</a></p>
    </div>
</div>
<div class="policy-page" id="js-page-verify" hidden></div>