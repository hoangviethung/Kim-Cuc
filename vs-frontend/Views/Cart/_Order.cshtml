@model MainProject.SCommerce.LandingPage.Models.Cart.OrderViewModel

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.TextBoxFor(d => d.Name, new { placeholder = @Html.GetResource(TempResourceKeyCollection.Full_Name), @class = "form-control", id = "fullname" })
        @Html.ValidationMessageFor(d => d.Name)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(d => d.PhoneNumber, new { placeholder = @Html.GetResource(TempResourceKeyCollection.Phone_Number), @class = "form-control", id = "phone" })
        @Html.ValidationMessageFor(d => d.PhoneNumber)
    </div>
    <br>
    <h3>@Html.GetResource(TempResourceKeyCollection.Contact_Info)</h3>
    <div class="form-group">
        @Html.TextAreaFor(d => d.Address, new { placeholder = "Địa chỉ chi tiết: ví dụ 151, Quang Trung, Gò Vấp", @class = "form -control", id = "address" })
        @Html.ValidationMessageFor(d => d.Address)
    </div>
    <div class="form-button">
        <button class="btn btn-apply" data-url="ajax">@Html.GetResource(TempResourceKeyCollection.Cart_Order_Confirmation)</button>
    </div>
}