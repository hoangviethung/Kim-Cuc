@model MainProject.SBussiness.LandingPage.Models.Contact.ContactViewModel
@using MainProject.Core.Enums

@*BLOCK THÔNG TIN LIÊN LẠC VỚI CÔNG TY*@
<section class="block-info-contact">
    <div class="container">
        <div class="block-title">
            <h2>@Model.ListTitle[0].Title</h2>
        </div>
        <div class="row">
            <div class="col-lg-5">
                <div class="logo-company">
                    <div class="img ov-h"><img class="lazyload blur-up" data-src="/Content/resources/assets/logo.svg" alt=""></div>
                    <div class="name">KIM CÚC SPORT</div>
                </div>
                <ul class="list-info-contact">
                    @foreach (var item in Model.Branch)
                    {
                        <li class="item-info">
                            <div class="icon"><img class="lazyload blur-up" data-src="/Content/resources/assets/icons/address-site-contact.svg" alt="ICON ĐỊA CHỈ"></div>
                            <a class="text" href="javascript:void(0)">@item.Address</a>
                        </li>
                        <li class="item-info">
                            <div class="icon"><img class="lazyload blur-up" data-src="/Content/resources/assets/icons/phone-site-contact.svg" alt="ICON ĐỊA CHỈ"></div>
                            <a class="text" href="tel:@item.Phone">@item.Phone</a>
                        </li>
                        <li class="item-info">
                            <div class="icon"><img class="lazyload blur-up" data-src="/Content/resources/assets/icons/mail-site-contact.svg" alt="ICON ĐỊA CHỈ"></div>
                            <a class="text" href="mailto:@item.Email">@item.Email</a>
                        </li>
                        <li class="item-info">
                            <div class="icon"><img class="lazyload blur-up" data-src="/Content/resources/assets/icons/facebook-site-contact.svg" alt="ICON ĐỊA CHỈ"></div>
                            <a class="text" target="_blank" href="@item.Description">@item.Description</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-7">
                <div id="map"></div>
            </div>
        </div>
    </div>
</section>

@*BLOCK FORM LIÊN HỆ*@
<section class="block-form-contact">
    <div class="container">
        <div class="block-title">
            <h2>@Model.ListTitle[1].Title</h2>
        </div>
        <div class="block-form block-send-mail">
            <form action="#" method="POST">
                <div class="form-group">
                    <label for="name">TÊN ĐẦY ĐỦ (*)</label>
                    <input class="form-control" id="name" type="text" placeholder="Nhập tên đầy đủ">
                </div>
                <div class="form-group">
                    <label for="email">EMAIL (*)</label>
                    <input class="form-control" id="email" type="text" placeholder="Nhập email">
                </div>
                <div class="form-group">
                    <label for="phone">SỐ ĐIỆN THOẠI (*)</label>
                    <input class="form-control" id="phone" type="text" placeholder="Nhập số điện thoại">
                </div>
                <div class="form-group">
                    <label for="content">NỘI DUNG (*)</label>
                    <textarea class="form-control" id="content" placeholder="Nhập nội dung"></textarea>
                </div>
                <div class="form-group">
                    <label for="#"></label>
                    <button class="btn btn-submit" data-url="ajax">GỬI LIÊN HỆ</button>
                </div>
            </form>
        </div>
    </div>
</section>
<div class="contact-page" id="js-page-verify" hidden></div>