block var

doctype html

html(lang="en")
	head
		title #{title}
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		link(href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i&display=swap&subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet")
		link(rel="stylesheet", href="./css/core.min.css")
		link(rel="stylesheet", href="./css/main.min.css")
	body
		#fb-root
		#loading
			.logo-loader
				img(src="./assets/logo.svg")
			.progstat-wrapper Loading:
				span#progstat 0
				| %
			#progress
		//- main content
		block header
			include _header.pug
		block banner,breadcrumb
		main
			block main
			#js-page-verify(class=bodyClass hidden)
		block footer
			include _footer.pug
		#back-to-top
			img(src="./assets/icons/back-to-top.svg", alt="NÚT TRỞ VỀ ĐẦU TRANG KIM CÚC SPORTS")
		script(async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v6.0&appId=774359209430335&autoLogAppEvents=1")
		script(type="text/javascript", src="./js/core.min.js")
		script(type="text/javascript", src="./js/main.min.js")
		block scripts